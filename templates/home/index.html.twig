{% extends 'base.html.twig' %}

{% block title %}CyberFolio{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bienvenue sur le tableau de bord !</h1>
    {% if app.user %}
        <h2>Vous êtes connecté en tant que 
            <a href="{{ path('user_show', { id: app.user.id }) }}"> {{ app.user.firstname }} </a>
        </h2>
        <a href="{{ path('app_logout') }}" class="btn btn-danger">Logout</a>
    {% else %}
        <h2>Vous n'êtes pas connecté</h2>
        <a href="{{ path('app_login') }}" class="btn btn-primary">Login</a>
    {% endif %}
    <br/>
    <a href="{{ path('user_list') }}" class="btn btn-primary">Liste des utilisateurs</a>

</div>
{% endblock %}
