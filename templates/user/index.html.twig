{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

    <ul>
        {% for user in users %}
            <li>
                <a href="{{ path('user_show', { id: user.id }) }}">
                    {{ user.firstname }} {{ user.lastname }} ({{ user.email }})
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
